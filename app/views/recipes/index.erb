<%= render 'shared/navbar'%>
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Recipes</h1>
    <% if @user.admin == true %>
         <%= link_to "Create Recipe", new_recipe_path, :class => "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="card-container">
  <% @recipes.each do |recipe| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= link_to recipe.name, recipe %></h5>
        <h6 class="card-subtitle mb-2 text-muted">Time: <%= recipe.time %></h6>
        <p class="card-text">Ingredients: <%= recipe.ingredients %></p>
      </div>
    </div>
  <% end %>
</div>
