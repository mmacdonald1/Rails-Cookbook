<%= render 'shared/navbar'%>

<div class="form-container">
  <div class="card" style="width: 35rem;">
    <form>
      <h4 class="form-title">Create Recipe</h4>
      <%= form_for @recipe do |f| %>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :time %>
        <%= f.text_field :time %>
      </div>
      <div class="form-group">
        <%= f.label :ingredients %>
        <%= f.text_field :ingredients %>
      </div>
      <div class="form-group">
        <%= f.label :recipe %>
        <%= f.text_field :recipe %>
      </div>
      <div class="btn btn-primary btn-sm form-button">
        <%= f.submit "Create", class: "btn btn-primary btn-sm" %>
      </div>
      <% end %>
    </form>
  </div>
</div>
