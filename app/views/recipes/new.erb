<%= render 'shared/navbar'%>

<div class="form-container">
  <div class="card" style="width: 35rem;">
    <%= form_for @recipe, :html => {:class => "form-horizontal center"} do |f| %>
      <h4 class="form-title">Create Recipe</h4>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :time %>
        <%= f.text_field :time %>
      </div>
      <div class="form-group">
        <%= f.label :ingredients %>
        <%= f.text_field :ingredients %>
      </div>
      <div class="form-group">
        <%= f.label :recipe %>
        <%= f.text_field :recipe %>
      </div>
        <%= f.submit "Create", class: "btn btn-primary form-button" %>
    <% end %>
  </div>
</div>
