<h1>Create User</h1>
<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
    <br>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :username %>
<%= f.label :password %>
<%= f.text_field :password %>

<%= f.submit %>
<% end %>
