<%= render 'shared/homenav'%>

<div class="form-container">
  <div class="card" style="width: 35rem;">
    <%=form_tag '/login', :html => {:class => "form-horizontal center"}  do %>
      <h4 class="form-title" >Login</h4>
      <div class="form-group">
        <%= label_tag "Username" %>
        <%= text_field_tag :username %>
      </div>
      <div class="form-group">
        <%= label_tag "Password" %>
        <%= text_field_tag :password %>
      </div>
        <%= submit_tag "Log in", class: "btn btn-primary form-button" %>
    <% end %>
  </div>
</div>
